prototype(NodeTypes:Text) {
	@context.configuration = ${Configuration.setting('Dotpulse.Base.Text')}
	attributes.class = TypoScript:RawArray {
		container = ${q(node).parent().parent().is('[instanceof TYPO3.Neos:Document]') ? 'container' : ''}
		lead = ${q(node).property('lead') ? configuration.leadClass : ''}
		margin = ${q(node).property('bigmargin') ? configuration.marginClass : ''}
	}
}
